<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rccs">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.brilltech.rccs.RccsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.brilltech.rccs.activities.ReportDetails"></activity>
        <activity android:name="com.brilltech.rccs.activities.StatsActivity" />
        <activity android:name="com.brilltech.rccs.activities.FilesActivity" />
        <activity android:name="com.brilltech.rccs.activities.UserList" />
        <activity android:name="com.brilltech.rccs.activities.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.brilltech.rccs.activities.ReportsActivity" />
    </application>

</manifest>