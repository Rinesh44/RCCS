<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15sp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:weightSum="4">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="6dp"
                    android:layout_marginEnd="5dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/rl_donors"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_donors"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/donor" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_donors"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/proxima_regular"
                            android:gravity="center"
                            android:text="Donors"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="2"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/rl_pledges"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_pledges"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/pledge" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_pledges"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/proxima_regular"
                            android:gravity="center"
                            android:text="Pledges"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:weightSum="4">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="2"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/rl_payment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_payment"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/payment" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_payment"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/proxima_regular"
                            android:gravity="center"
                            android:text="Payment"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="2"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/rl_balance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_balance"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/balance" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_balance"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/proxima_regular"
                            android:gravity="center"
                            android:text="Balance"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:weightSum="4">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="6dp"
                    android:layout_marginEnd="5dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/rl_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/phone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_phone"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/proxima_regular"
                            android:gravity="center"
                            android:text="Phone"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="2"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/rl_association"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_association"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/association" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_association"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/proxima_regular"
                            android:gravity="center"
                            android:text="Association"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true" >

                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/address" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_address"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/proxima_regular"
                        android:gravity="center"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>